<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.odeskbd.workingwithxmlanimations">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FadeInActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".FadeOutActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".CrossfadeActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.odeskbd.workingwithxmlanimations.BlinkActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.odeskbd.workingwithxmlanimations.ZoomInActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ZoomOutActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".RotateActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".MoveActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".SlideUpActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".SlideDownActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".BounceActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".SequentialActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".TogetherActivity"
            android:label="@string/app_name" />
    </application>

</manifest>